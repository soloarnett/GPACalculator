<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#3a3a3a"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="thecollegenotebook.com.gpacalculator.MainActivity"
    tools:showIn="@layout/activity_main">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentEnd="false"
        android:layout_centerHorizontal="true"
        android:measureWithLargestChild="false">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="70dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/buttonA"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="#272727"
                android:gravity="top|right"
                android:maxLength="11"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textAlignment="gravity"
                android:textColor="#ffffff"
                android:textSize="35sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Space
                android:layout_width="fill_parent"
                android:layout_height="12dp"
                android:layout_column="0"
                android:layout_span="4" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Start"
                android:id="@+id/buttonStart"
                android:layout_column="0"
                android:onClick="onStartClickListener"
                android:layout_weight="1"
                android:backgroundTint="#ffeb3b" />

            <Button
                android:id="@+id/buttonWeight"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_span="1"
                android:gravity="center"
                android:text="Credit Hours"
                android:onClick="onClickWeightListener"
                android:layout_weight="2"
                android:backgroundTint="#ef6c00" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Scale"
                android:id="@+id/buttonScale"
                android:layout_column="2"
                android:onClick="onClickScaleListener"
                android:layout_span="1"
                android:layout_weight="1"
                android:backgroundTint="#64dd17" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Space
                android:layout_width="fill_parent"
                android:layout_height="12dp"
                android:layout_column="0"
                android:layout_span="4" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="70dp"
            android:id="@+id/tableRow1">

            <Button
                android:id="@+id/button7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:onClick="numberClickHandler"
                android:text="7"
                android:textSize="18sp"
                android:minHeight="80dp" />

            <Button
                android:id="@+id/button8"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:onClick="numberClickHandler"
                android:text="8"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button9"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:onClick="numberClickHandler"
                android:text="9"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonClear"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:onClick="clearClickHandler"
                android:text="CLR"
                android:backgroundTint="#b71c1c"
                android:textColor="#e0e0e0" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="70dp"
            android:id="@+id/tableRow2">

            <Button
                android:id="@+id/button4"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:onClick="numberClickHandler"
                android:text="4"
                android:textSize="18sp"
                android:minHeight="80dp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:onClick="numberClickHandler"
                android:text="5"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:onClick="numberClickHandler"
                android:text="6"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonAlph"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:onClick="abcClickHandler"
                android:text="ABC" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="70dp"
            android:id="@+id/tableRow3">

            <Button
                android:id="@+id/button1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:onClick="numberClickHandler"
                android:text="1"
                android:textSize="18sp"
                android:minHeight="80dp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:onClick="numberClickHandler"
                android:text="2"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:onClick="numberClickHandler"
                android:text="3"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonAdd"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:onClick="addClickHandler"
                android:text="+"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="70dp"
            android:id="@+id/tableRow4">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="."
                android:id="@+id/buttonDot"
                android:layout_column="0"
                android:textSize="30sp"
                android:layout_weight="1"
                android:onClick="numberClickHandler"
                android:backgroundTint="#616161"
                android:textColor="#e0e0e0"
                android:minHeight="80dp" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="0"
                android:id="@+id/button0"
                android:layout_column="1"
                android:textSize="18sp"
                android:layout_weight="1"
                android:onClick="numberClickHandler" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Done"
                android:id="@+id/buttonDone"
                android:layout_column="2"
                android:layout_span="2"
                android:textSize="18sp"
                android:layout_weight="2"
                android:onClick="doneClickHandler"
                android:backgroundTint="#616161"
                android:textColor="#e0e0e0" />
        </TableRow>

    </TableLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingTop="5dp"
                android:text="Hours"
                android:textColor="#ef6c00" />

            <Spinner
                android:id="@+id/number_spinner"
                android:spinnerMode="dialog"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@android:drawable/btn_default"
                android:gravity="center"
                android:textAlignment="gravity"
                android:backgroundTint="#00ffffff"
                android:layout_gravity="center_horizontal" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="70dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingTop="5dp"
                android:text="Scale"
                android:textColor="#64dd17" />

            <Spinner
                android:id="@+id/scale_spinner"
                android:spinnerMode="dialog"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@android:drawable/btn_default"
                android:gravity="center"
                android:textAlignment="gravity"
                android:backgroundTint="#00ffffff"
                android:layout_gravity="center_horizontal" />



        </FrameLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="bottom|right"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/textViewStartMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Normal"
                android:textColor="#ffeb3b" />

            <Spinner
                android:id="@+id/start_spinner"
                android:spinnerMode="dialog"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@android:drawable/btn_default"
                android:gravity="center"
                android:textAlignment="gravity"
                android:backgroundTint="#00ffffff"
                android:layout_gravity="center_horizontal" />
        </FrameLayout>

    </FrameLayout>

</RelativeLayout>
