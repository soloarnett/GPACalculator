<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3a3a3a"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="thecollegenotebook.com.gpacalculator.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:id="@+id/button7"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="97dp"
        android:text="7"
        android:background="@color/colorCalcButton"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:textSize="18sp"
        android:onClick="numberClickHandler" />

    <Button
        android:id="@+id/button8"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/button7"
        android:layout_toEndOf="@+id/button7"
        android:layout_toRightOf="@+id/button7"
        android:text="8"
        android:background="@color/colorCalcButton"
        android:textSize="18sp"
        android:onClick="numberClickHandler" />

    <Button
        android:id="@+id/button9"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/button8"
        android:layout_toEndOf="@+id/button8"
        android:layout_toRightOf="@+id/button8"
        android:text="9"
        android:background="@color/colorCalcButton"
        android:layout_marginBottom="5sp"
        android:layout_marginLeft="5dp"
        android:textSize="18sp"
        android:onClick="numberClickHandler" />

    <Button
        android:id="@+id/button4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button7"
        android:text="4"
        android:background="@color/colorCalcButton"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:textSize="18sp"
        android:onClick="numberClickHandler" />

    <Button
        android:id="@+id/button5"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/button8"
        android:layout_alignStart="@+id/button8"
        android:layout_alignTop="@+id/button4"
        android:text="5"
        android:background="@color/colorCalcButton"
        android:textSize="18sp"
        android:onClick="numberClickHandler" />

    <Button
        android:id="@+id/button6"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="6"
        android:background="@color/colorCalcButton"
        android:layout_alignTop="@+id/button5"
        android:layout_alignLeft="@+id/button9"
        android:layout_alignStart="@+id/button9"
        android:textSize="18sp"
        android:onClick="numberClickHandler" />

    <Button
        android:id="@+id/button1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="1"
        android:background="@color/colorCalcButton"
        android:layout_below="@+id/button4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="18sp"
        android:onClick="numberClickHandler" />

    <Button
        android:id="@+id/button2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="2"
        android:background="@color/colorCalcButton"
        android:layout_below="@+id/button4"
        android:layout_toLeftOf="@+id/button9"
        android:layout_toStartOf="@+id/button9"
        android:textSize="18sp"
        android:onClick="numberClickHandler" />

    <Button
        android:id="@+id/button3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="3"
        android:background="@color/colorCalcButton"
        android:layout_alignTop="@+id/button2"
        android:layout_alignLeft="@+id/button6"
        android:layout_alignStart="@+id/button6"
        android:textSize="18sp"
        android:onClick="numberClickHandler" />

    <Button
        android:id="@+id/button0"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="0"
        android:background="@color/colorCalcButton"
        android:layout_below="@+id/button2"
        android:layout_toLeftOf="@+id/button9"
        android:layout_marginTop="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="18sp"
        android:onClick="numberClickHandler" />

    <Button
        android:id="@+id/buttonDot"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="."
        android:background="#b6b6b6"
        android:layout_alignBottom="@+id/button0"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:textSize="18sp"
        android:onClick="numberClickHandler" />

    <Button
        android:id="@+id/buttonWeight"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="Add Weight"
        android:background="#b6b6b6"
        android:layout_toRightOf="@+id/button9"
        android:layout_toEndOf="@+id/button9"
        android:layout_alignBottom="@+id/button6"
        android:layout_marginLeft="5dp"
        android:layout_alignTop="@+id/button6" />

    <Button
        android:id="@+id/buttonDone"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="Done"
        android:background="#b6b6b6"
        android:layout_alignBottom="@+id/buttonDot"
        android:layout_toRightOf="@+id/buttonDot"
        android:layout_toEndOf="@+id/buttonDot"
        android:layout_marginLeft="5dp" />

    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="+"
        android:background="#b6b6b6"
        android:layout_alignTop="@+id/button3"
        android:layout_toRightOf="@+id/button3"
        android:layout_toEndOf="@+id/button3"
        android:layout_marginLeft="5dp"
        android:textSize="18sp" />

    <Button
        android:id="@+id/buttonAlph"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="ABC"
        android:background="#b6b6b6"
        android:layout_alignTop="@+id/button9"
        android:layout_toRightOf="@+id/button9"
        android:layout_toEndOf="@+id/button9"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/button8"
        android:background="#272727"
        android:layout_marginBottom="12dp" />

</RelativeLayout>
